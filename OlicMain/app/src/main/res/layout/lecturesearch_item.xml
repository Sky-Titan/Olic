<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="lecture"
            type="com.jun.vacancyclassroom.model.Lecture" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:descendantFocusability="blocksDescendants"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/lecture_code"
            android:text="@{lecture.lecture_code}"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/lecture_name"
            android:text="@{lecture.lecture_name}"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/lecture_quota"
            android:text="@{lecture.quota}"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/req_quota"
            android:text="@{lecture.req_cnt}"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/lecture_button"
            android:layout_weight="1"
            android:background="@color/red"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
</layout>